<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_marginBottom="@dimen/ui_default_bottom_margin"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/ui_default_margin_padding_size">

    <TextView
        android:id="@+id/ui_view_item_inputable_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="100dp"
        android:minWidth="70dp"
        android:text="@string/app_name" />

    <com.hlk.wbs.espider.lib.CountdownEditText
        android:id="@+id/ui_view_item_inputable_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ui_input_background"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:padding="@dimen/ui_default_margin_padding_size"
        android:textColorHint="@color/color_d0d0d0"
        app:cet_counter_max="8"
        app:cet_counter_text_size="8sp" />
</LinearLayout>