<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/ui_default_margin_padding_size_big">

    <com.hlk.wbs.espider.lib.EverdigmIcon
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ui_layout_view_item_everdigm_icon_size" />

    <com.hlk.wbs.espider.lib.IconTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ui_default_margin_padding_size"
        android:layout_marginRight="@dimen/ui_default_margin_padding_size"
        android:gravity="center"
        android:text="@string/ui_base_text_everdigm_icon_text"
        app:hlktv_font="icomoon" />
</LinearLayout>