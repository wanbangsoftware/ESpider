<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/ui_default_margin_padding_size">

    <com.hlk.wbs.espider.lib.IconTextView
        android:id="@+id/ui_base_nothing_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ui_base_text_nothing"
        android:textColor="@color/color_db7763"
        android:textSize="@dimen/ui_nothing_loading_icon_size"
        app:hlktv_font="materialicon" />

    <TextView
        android:id="@+id/ui_base_nothing_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/ui_default_margin_padding_size"
        android:text="@string/ui_warning_nothing"
        android:textColor="@color/color_aed24c" />
</LinearLayout>