<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ui_custom_toast_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ui_custom_toast_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/ui_default_margin_padding_size">

    <com.hlk.wbs.espider.lib.IconTextView
        android:id="@+id/ui_custom_toast_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ui_default_margin_padding_size"
        android:layout_marginRight="@dimen/ui_default_margin_padding_size"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/ui_toast_icon_size"
        app:hlktv_font="materialicon" />

    <TextView
        android:id="@+id/ui_custom_toast_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:textColor="@android:color/white" />
</LinearLayout>